<?xml version="1.0" encoding="utf-8" ?>
<!-- These patches adds Protogen PawnKinds to all base game encounters, 
	 with 20% of the weighting of the equivalent Human PawnKinds -->

<Patch>
	<!-- Pirates -->
	<!-- Pirate raid 1; 100 commonality, ranged with melee mix-ins -->
	<Operation Class="PatchOperationAdd">
	<xpath>*/FactionDef[defName="Pirate"]/pawnGroupMakers/li[1]/options</xpath>
	<value>
        <Protogen_Drifter>2</Protogen_Drifter>
		<Protogen_Thrasher>0.6</Protogen_Thrasher>
        <Protogen_Scavenger>2</Protogen_Scavenger>
        <Protogen_Pirate>2</Protogen_Pirate>
        <Protogen_Grenadier_EMP>0.1</Protogen_Grenadier_EMP>
        <Protogen_Grenadier_Destructive>0.4</Protogen_Grenadier_Destructive>
        <Protogen_Mercenary_Gunner>2</Protogen_Mercenary_Gunner>
        <Protogen_Mercenary_Heavy>1.2</Protogen_Mercenary_Heavy>
        <Protogen_Mercenary_Slasher>0.6</Protogen_Mercenary_Slasher>
        <Protogen_Mercenary_Sniper>1.4</Protogen_Mercenary_Sniper>
        <Protogen_Mercenary_Elite>2</Protogen_Mercenary_Elite>
        <Protogen_PirateBoss>1</Protogen_PirateBoss>
	</value>
	</Operation>

	<!-- Pirate raid 2; 30 commonality, melee only -->
